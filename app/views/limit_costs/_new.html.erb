<div class="modal-body">
  <%= form_for :degree_employee do |f| %>
    <h5 id="degree-name" class="text-center text-secondary"></h5>
    <div class="name form-group">
      <label>Tên cấp bậc</label>
      <%= f.text_field :name, class: "form-control", required: true %><br />
    </div>
    <div class="form-group hidden">
      <label> Thuộc bộ phận</label>
      <%= f.select :department_id, Department.pluck(:name, :id), {include_blank: "-- Chọn bộ môn --"}, required: true, class: "form-control select"%>
    </div>

    <div class="d-flex flex-row-reverse mt-5">
      <%= f.submit "Lưu", class: 'btn btn-primary pl-4 pr-4 ml-3' %>
      <button type="button" class="btn btn-danger  pl-4 pr-4" data-dismiss="modal">Hủy</button>
    </div>
  <% end %>
</div>

