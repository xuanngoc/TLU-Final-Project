<div class="row">
  <div class="col-4">
  </div>

  <div class="col-4">
    <h3 class="text-center">Đổi mật khẩu</h3>
    <p class="text-center mt-3 mb-3"><%= User.find(params[:user_id]).full_name if params[:user_id].present? %></p>
    <%= form_tag "/password_change", method: "post", onSubmit: "return checkMatchPassword()" do %>
      <div class="form-group">
        <label for="exampleInputEmail1">Mật khẩu mới</label>
        <input type="password" class="form-control" name="password[password]" id="password" aria-describedby="emailHelp">
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">Xác nhận mật khẩu</label>
        <input type="password" class="form-control" name="password[password_confirm]" id="password_confirm" >
        <span id="notice"></span>
      </div>
      <div class="text-center">
        <button type="submit" class="btn btn-primary">Xác nhận</button>
      </div>
    <% end %>
  </div>
  <div class="col-4"></div>

</div>

<script>
    function checkMatchPassword(){
      let pw = document.getElementById('password').value
      let pwConfirm = document.getElementById('password_confirm').value

      if (pw == pwConfirm) {
        return true
      }
      document.getElementById('notice').innerText = "Mật khẩu không trùng khớp"
      return false
    }
</script>
