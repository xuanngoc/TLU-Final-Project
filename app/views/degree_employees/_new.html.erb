<div class="modal-body">
  <%= form_for :degree_employee do |f| %>
    <div class="code form-group">
      <label>Bộ phận</label>
      <%= f.select :degree_type, [['Giaos ducj', 'education'], ['Dieu hanh', 'operation']], { }, class: "form-control" %><br />
    </div>
    <div class="name form-group">
      <label>Tên cấp bậc</label>
      <%= f.text_field :name, class: "form-control" %><br />
    </div>

    <div class="d-flex flex-row-reverse">
      <%= f.submit "Lưu", class: 'btn btn-primary pl-4 pr-4 ml-3' %>
      <button type="button" class="btn btn-danger  pl-4 pr-4" data-dismiss="modal">Hủy</button>
    </div>
  <% end %>
</div>

