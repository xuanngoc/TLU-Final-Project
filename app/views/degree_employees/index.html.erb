
<div class="row">
  <div class="col-10"></div>
  <button type="button" class="btn btn-primary mb-3" data-toggle="modal" data-target="#createModal">Thêm cấp bậc</button>
</div>

<!-- Modal -->
<div class="modal fade" id="createModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Thêm cấp bậc</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'new' %>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="editModalDegree" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Thêm cấp bậc</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'edit' %>
      </div>
    </div>
  </div>
</div>

<h5>Danh sách cấp bậc thuộc bộ phận giáo dục</h5>
<div>
  <table class="table text-center">
    <thead>
      <tr>
        <th scope="col">STT</th>
        <th scope="col">Tên cấp bậc</th>
        <th scope="col">Hành động</th>
      </tr>
    </thead>
    <tbody>
      <% @degrees_education.each_with_index do |degree, index| %>
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <td><%= degree.name %></td>
          <td>
            <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#editModalDegree" data-id="<%= degree.id %>" data-degree_type="<%= degree.degree_type %>" data-name="<%= degree.name %>"><i class="fas fa-edit"></i></button>
            <%= link_to degree,  method: :delete, data: { confirm: "Really ?  " + degree.name }, class: 'btn btn-danger' do %>
              <i class="fas fa-trash"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

