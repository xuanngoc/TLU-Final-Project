<div class="row" data-controller="business-trip-form">
  <div class="col-3"></div>
  <%= form_for @request_payment, :html => {:class => 'col-6'} do |f| %>
    <h5>Danh sách chi phí</h5>
    <div class="text-right">
      <button type="button" class="btn btn-primary  pl-4 pr-4" data-dismiss="modal">Thêm chi phí</button>
    </div>

    <div class="d-flex flex-row-reverse mt-5">
      <%= f.submit "Lưu", class: 'btn btn-primary pl-4 pr-4 ml-3' %>
      <button type="button" class="btn btn-danger  pl-4 pr-4" data-dismiss="modal">Hủy</button>
    </div>
  <% end %>
  <div class="col-3"></div>
</div>

