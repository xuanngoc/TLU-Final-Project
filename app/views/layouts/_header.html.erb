<div class="header d-flex justify-content-end" style="font-size: 1.2em">

  <div class="mr-5">
    <% if user_signed_in? %>
      <div class="mt-3">
        <% if current_user.degree_level && current_user.degree_level.department %>
          <p class="mb-0"> Hello, <%= current_user.full_name %></p>
          <div class=" d-inline dropdown">
            <button class="btn  dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <%= link_to('Đổi mật khẩu', '/password_change', class: "dropdown-item") %>
                <%= link_to('Đăng xuất', destroy_user_session_path, method: :delete, class: "dropdown-item") %>
            </div>
          </div>
          <p class="d-inline mb-0 text-danger" ><%= current_user.degree_level.department.name %></p>
        <% else %>
           <div class=" d-inline dropdown">
            <button class="btn  dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <%= link_to('Đổi mật khẩu', '/password_change', class: "dropdown-item") %>
                <%= link_to('Đăng xuất', destroy_user_session_path, method: :delete, class: "dropdown-item") %>
            </div>
          </div>
          <span> Hello, <strong><%= current_user.role %></strong> </span>
        <% end %>
      </div>
      <%# <%= link_to('Đăng xuất', destroy_user_session_path, method: :delete) %>
    <% else %>
      <%# <%= link_to('Đăng nhập', new_user_session_path) %>
    <% end %>
  </div>
</div>
