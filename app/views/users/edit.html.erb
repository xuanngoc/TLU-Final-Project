<div class="row">
  <div class="col-4"></div>
  <%= form_for @user , html: {class: "col-4"} do |f| %>
    <h5 id="department-name" class="text-center text-secondary"><%= @user.degree_level.department.name %></h5>
    <h5 id="degree-name" class="text-center text-secondary"><%= @user.degree_level.name %> </h5>
    <p class="name"></p>

    <div class="full_name form-group">
      <label>Họ tên</label>
      <%= f.text_field :full_name, class: "form-control", required: true  %>
    </div>

    <div class="email form-group">
      <label>Email</label>
      <%= f.email_field :email, class: "form-control", required: true  %>
    </div>

    <div class="birthday form-group ">
      <label>Ngày sinh</label>
      <div class="d-flex flex-row-reverse">
        <%= f.date_select :birthday, {start_year: 1900, end_year: 2010}, class: "btn border border-secondary flex-fill mr-2", style: "display: inline;" %>
      </div>
    </div>

    <div class="gender form-group">
      <label>Giới tính</label>
      <%= f.select :gender, [['Nam'], ['Nữ']], { }, class: "form-control" %>
    </div>

    <div class="address form-group">
      <label>Địa chỉ</label>
      <%= f.text_field :address, class: "form-control", required: true  %>
    </div>

    <div class="d-flex flex-row-reverse mt-5">
      <%= f.submit "Lưu", class: 'btn btn-primary pl-4 pr-4 ml-3' %>
      <button type="button" class="btn btn-danger  pl-4 pr-4" data-dismiss="modal">Hủy</button>
    </div>
  <% end %>
  <div class="col-4"></div>
</div>

