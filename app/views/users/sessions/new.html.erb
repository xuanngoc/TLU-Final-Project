<div class="login mh-100">
  <div class="container h-100">

    <div class="row h-100 justify-content-center align-items-center ">
      <div class="col-3"></div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "col-6 p-5 form-login rounded border-primary"}) do |f| %>
        <h2 class="text-center">Login</h2>
        <div class="field h-100 m-5">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-100" %>
        </div>

        <div class="field h-100 mr-5 ml-5 mb-2">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "w-100" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field h-100 mr-5 ml-5 mt-5">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions mb-5 mr-5 ml-5">
          <%= f.submit "Log in", class: "w-100 btn btn-primary" %>
        </div>

        <div class="m-5 mb-3">
          <%= render "users/shared/links" %>
        </div>
      <% end %>
      <div class="col-3"></div>
    </div>

  </div>
</div>
