<div class="modal-body">
  <%= form_for :cost_type do |f| %>
    <h5 id="type-name" class="text-center text-secondary"></h5>
    <div class="name form-group">
      <label>Tên loai chi phi</label>
      <%= f.text_field :name, class: "form-control", required: true %><br />
    </div>

    <div class="d-flex flex-row-reverse mt-5">
      <%= f.submit "Lưu", class: 'btn btn-primary pl-4 pr-4 ml-3' %>
      <button type="button" class="btn btn-danger  pl-4 pr-4" data-dismiss="modal">Hủy</button>
    </div>
  <% end %>
</div>

